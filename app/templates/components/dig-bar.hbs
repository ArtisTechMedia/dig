<div class="input-group search-dig">
  <a {{action 'toggleAdvanced'}} class='input-group-addon' href='#' title='Advanced Dig Toggle'>
    <span {{bind-attr
      class=":glyphicon showAdvanced:glyphicon-chevron-down:glyphicon-chevron-right"
    }}></span>
  </a>
  {{input class="form-control" value=params.query placeholder="Search Terms" size="128"}}
  <span class='input-group-addon'>
    {{view 'select'
      content=licOptions
      placeholder="Any"
      optionLabelPath="content.label"
      optionValuePath="content.value"
      value=params.lic
    }}
  </span>
  <a {{action 'dig' queryParams}} class='input-group-addon btn btn-default' href='#'>
    dig
  </a>
</div>

{{#if showAdvanced}}
  <section class='well advanced'>
    <h4>
      <label class='results'>
        results
        {{view 'select'
          content=resultsOptions
          value=params.limit
        }}
      </label>
      <label class='since'>
        since
        {{view 'select'
          content=sincedOptions
          value=params.sinced
          optionLabelPath="content.label"
          optionValuePath="content.value"
        }}
      </label>
      <label class='sort'>
        sort
        {{view 'select'
          content=sortOptions
          value=params.sort
          optionLabelPath="content.label"
          optionValuePath="content.value"
        }}
      </label>
      <label class='direction'>
        {{view 'select'
          content=ordOptions
          value=params.ord
          optionLabelPath="content.label"
          optionValuePath="content.value"
        }}
      </label>
      <label class='combine'>
        combine
        {{view 'select'
          content=stypeOptions
          value=params.stype
          optionLabelPath="content.label"
          optionValuePath="content.value"
        }}
      </label>
    </h4>
    <div class='row tags'>
      <div class='col-xs-4 tags-genre'>
        <h4>genre</h4>
        {{tags-selector bar=this
            queryParams="pair=remix&cat=genre&cache=genre_tags"}}
      </div>
      <div class='col-xs-4 tags-instrument'>
        <h4>instrument</h4>
        {{tags-selector bar=this
            queryParams="pair=remix&min=3&cat=instr&cache=instr_tags"}}
      </div>
      <div class='col-xs-4 tags-style'>
        <h4>style</h4>
        {{tags-selector bar=this
            queryParams="pair=remix&min=10&cat=mood&cache=mood_tags"}}
      </div>
    </div>
    {{#if tags.length}}
      <h5 class='tags-list'>
        tags
        {{#each tags}}
          <span class='label label-default'>
            {{this}}
            <a {{action 'clearTag' this}} href='#'
              class='glyphicon glyphicon-remove-circle'></a>
          </span>
        {{/each}}

        <a {{action 'clearTags'}} href='#'
            class='label label-danger'>
          Clear
          <span class='glyphicon glyphicon-remove-circle'></span>
        </a>
      </h5>
    {{/if}}
  </section>
{{/if}}
